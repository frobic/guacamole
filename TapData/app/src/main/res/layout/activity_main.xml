<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textFreq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Fréquence" />

    <ListView
        android:id="@+id/listFreq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice" >
    </ListView>

    <TextView
        android:id="@+id/textData"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Critères étudiés :" />

    <ListView
        android:id="@+id/listSensors"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:choiceMode="multipleChoice" >
    </ListView>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Commencer la mesure" />

    <Button
        android:id="@+id/writeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Générer le fichier résultat" />

</LinearLayout>